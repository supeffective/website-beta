{
  "name": "supereffective-2024",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm generate:data && next build",
    "build:vercel": "pnpm db:migrate && pnpm build",
    "db:generate": "pnpm drizzle-kit generate:mysql",
    "db:migrate": "bun lib/db/migrate.ts",
    "db:push": "env-cmd pnpm drizzle-kit push:mysql",
    "dev": "open http://localhost:3000 && PORT=3000 next dev --turbo",
    "format": "pnpm lint-fix && pnpm format-code && pnpm format-package-json",
    "format-code": "prettier . --write",
    "format-package-json": "sort-package-json",
    "generate": "pnpm db:generate",
    "generate:assets": "pnpm generate:pwa-splash && pnpm generate:pwa-favicon",
    "generate:data": "bun ./lib/pokemon/maintenance/optimize-dataset.ts",
    "generate:pwa-favicon": "pwa-asset-generator resources/logo/icon.svg public/pwa-assets --path '' --icon-only --favicon --padding '10%' --manifest resources/pwa-assets/manifest-favicon.json --background '#906bc7' --index resources/pwa-assets/metadata-favicon.html --xhtml",
    "generate:pwa-splash": "pwa-asset-generator resources/logo/logo.svg public/pwa-assets --path '' --splash-only --padding '15%' --manifest public/manifest.json --background '#906bc7' --index resources/pwa-assets/metadata-splash.html --xhtml",
    "hooks:pre-commit": "pnpm lint-staged",
    "hooks:pre-push": "pnpm quality-checks:ci",
    "postinstall": "pnpm format-package-json",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "prepare": "husky install",
    "pretty": "pnpm run format",
    "preview": "pnpm start",
    "quality-checks": "turbo build && turbo lint && turbo typelint && turbo test:ci",
    "quality-checks:ci": "turbo lint && turbo typelint && turbo test:ci",
    "start": "next start",
    "test": "bun test",
    "test:ci": "bun test --coverage --bail=5 --ci",
    "test:coverage": "bun test --coverage",
    "typelint": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@auth/core": "^0.18.0",
    "@auth/drizzle-adapter": "^0.3.5",
    "@hookform/resolvers": "^3.3.2",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@sentry/nextjs": "^7.75.1",
    "@supeffective/dataset": "^0.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "env-cmd": "^10.1.0",
    "lucide-react": "^0.289.0",
    "mysql2": "^3.6.2",
    "next": "^14.0.0",
    "next-auth": "^4.24.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "sharp": "^0.32.6",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "bun": "^1.0.7",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.52.0",
    "eslint-config-next": "14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "fast-glob": "^3.3.1",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "next-mdx-remote": "^4.4.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "publint": "^0.2.5",
    "pwa-asset-generator": "^6.3.1",
    "sass": "^1.69.5",
    "sort-package-json": "^2.6.0",
    "tailwindcss": "^3.3.5",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.2"
}
