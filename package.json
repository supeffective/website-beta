{
  "name": "supereffective-2024",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm generate:data && next build",
    "build:vercel": "pnpm db:migrate && pnpm generate:data && next build --no-lint",
    "db:generate": "pnpm drizzle-kit generate:mysql",
    "db:migrate": "bun ./lib/db/migrate.ts",
    "db:push": "env-cmd pnpm drizzle-kit push:mysql",
    "dev": "pnpm generate:data && concurrently -r 'PORT=3000 next dev' 'sleep 10 && open http://localhost:3000'",
    "format": "pnpm lint-fix && pnpm format-code && pnpm format-package-json",
    "format-code": "prettier . --write",
    "format-package-json": "sort-package-json",
    "generate": "pnpm db:generate",
    "generate:assets": "./lib/scripts/generate-pwa-assets.sh",
    "generate:data": "bun ./lib/dataset/maintenance/optimize-dataset.ts",
    "hooks:pre-commit": "pnpm lint-staged",
    "hooks:pre-push": "pnpm quality-checks:quick",
    "postinstall": "pnpm format-package-json",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "prepare": "husky install",
    "pretty": "pnpm run format",
    "preview": "pnpm start",
    "qa": "turbo lint && turbo typelint && turbo test:ci",
    "quality-checks": "turbo lint && turbo typelint && turbo test:ci && turbo build",
    "quality-checks:quick": "turbo lint && turbo typelint && turbo test:ci",
    "start": "next start",
    "test": "bun test",
    "test:ci": "bun test --coverage --bail=5 --ci",
    "test:coverage": "bun test --coverage",
    "typelint": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@auth/core": "^0.18.6",
    "@auth/drizzle-adapter": "^0.3.11",
    "@hookform/resolvers": "^3.3.2",
    "@lucia-auth/adapter-mysql": "^2.1.0",
    "@lucia-auth/oauth": "^3.5.0",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@sentry/nextjs": "^7.87.0",
    "@supeffective/dataset": "^0.8.4",
    "@supeffective/icons": "^0.8.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.1",
    "env-cmd": "^10.1.0",
    "lucia": "^2.7.4",
    "lucide-react": "^0.294.0",
    "mysql2": "^3.6.5",
    "nanoid": "^5.0.4",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "sharp": "^0.33.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "next-mdx-remote": "^4.4.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "publint": "^0.2.6",
    "pwa-asset-generator": "^6.3.1",
    "sass": "^1.69.5",
    "sort-package-json": "^2.6.0",
    "tailwindcss": "^3.3.6",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.9.2",
  "pnpm": {
    "overrides": {
      "disabled---eslint-config-next": "14.0.2",
      "disabled---next": "14.0.2"
    }
  }
}
