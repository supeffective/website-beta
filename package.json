{
  "name": "supereffective-2024",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:vercel": "pnpm db:migrate && pnpm build",
    "db:generate": "pnpm drizzle-kit generate:mysql",
    "db:migrate": "bun lib/db/migrate.ts",
    "db:push": "env-cmd pnpm drizzle-kit push:mysql",
    "dev": "next dev",
    "format": "pnpm lint-fix && pnpm format-code && pnpm format-package-json",
    "format-code": "prettier . --write",
    "format-package-json": "sort-package-json",
    "generate": "pnpm db:generate",
    "hooks:pre-commit": "pnpm lint-staged",
    "hooks:pre-push": "pnpm quality-checks:ci",
    "postinstall": "pnpm format-package-json",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "prepare": "husky install",
    "pretty": "pnpm run format",
    "preview": "pnpm start",
    "quality-checks": "turbo build && turbo lint && turbo typelint && turbo test:ci",
    "quality-checks:ci": "turbo lint && turbo typelint && turbo test:ci",
    "start": "next start",
    "test": "bun test",
    "test:ci": "bun test --coverage --bail=5 --ci",
    "test:coverage": "bun test --coverage",
    "typelint": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@auth/core": "^0.17.0",
    "@auth/drizzle-adapter": "^0.3.4",
    "@planetscale/database": "^1.11.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@supeffective/dataset": "^0.5.2",
    "@supeffective/ui": "^0.5.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "env-cmd": "^10.1.0",
    "lucide-react": "^0.288.0",
    "mysql2": "^3.6.2",
    "next": "^13.5.6",
    "next-auth": "^4.24.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "bun": "^1.0.6",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.51.0",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "fast-glob": "^3.3.1",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "next-mdx-remote": "^4.4.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "publint": "^0.2.4",
    "sass": "^1.69.4",
    "sort-package-json": "^2.6.0",
    "tailwindcss": "^3.3.3",
    "turbo": "^1.10.15",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.2"
}
